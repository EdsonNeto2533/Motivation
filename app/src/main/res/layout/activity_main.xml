<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/llTopo"
        android:orientation="horizontal"
        android:background="@color/roxo">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/imgTodas"
            android:layout_height="52dp"
            android:padding="8dp"
            android:src="@drawable/infinito_ic"/>
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/imgFeliz"
            android:layout_height="52dp"
            android:padding="8dp"
            android:layout_weight="1"
            android:src="@drawable/face_ic"/>
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/imgBomDia"
            android:layout_height="52dp"
            android:padding="8dp"
            android:layout_weight="1"
            android:src="@drawable/sun_ic"/>




    </LinearLayout>
    <TextView
        android:layout_below="@+id/llTopo"
        android:id="@+id/tvHello"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        />

    <TextView
        android:id="@+id/tvFrase"
        android:layout_marginTop="32dp"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:text="Hello World!"
        />

    <View
        android:layout_width="128dp"
        android:layout_height="3dp"
        android:layout_below="@+id/tvFrase"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@color/rosa"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova Frase"
        android:id="@+id/btnNovaFrase"
        android:backgroundTint="@color/roxo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:padding="16dp"/>

</RelativeLayout>